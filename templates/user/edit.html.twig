{% extends 'base.html.twig' %}

{% block body %}

    {% include "header/admin/header.html.twig" %}

    <!-- CONTENT -->
    <main>
        <div class="container">
            <div class="form">
                <div class="form-nav">
                    <a href="{{ path('user_index') }}">retour</a>
                </div>
                <div class="form-box">
                    <div class="form-head">
                        <h1>Modifier un utilisateur</h1>
                    </div>
                    <div class="form-body">
                        {{ form_start(userForm) }}
                            <div class="form-group form-mb-l">
                                {{ form_label(userForm.username) }}
                                {{ form_widget(userForm.username, {'attr': {'class': 'form-element'}}) }}
                                {{ form_errors(userForm.username) }}
                            </div>
                            <div class="form-group form-mb-l">
                                {{ form_label(userForm.mail) }}
                                {{ form_widget(userForm.mail, {'attr': {'class': 'form-element'}}) }}
                                {{ form_errors(userForm.mail) }}
                            </div>
                            <div class="form-group form-mb-l form-inline">
                                <div>
                                    {{ form_widget(userForm.isSuperAdmin, {'attr': {'class': 'form-check-input'}}) }}
                                    {{ form_label(userForm.isSuperAdmin) }}
                                    {{ form_errors(userForm.isSuperAdmin) }}
                                </div>
                            </div>
                            <div class="form-action">
                                <button type="submit" class="button button-submit">Modifier</button>
                            </div>
                        {{ form_end(userForm) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
