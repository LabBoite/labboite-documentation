{% extends 'base.html.twig' %}

{% block body %}

    {% include "header/admin/header.html.twig" %}

    <!-- CONTENT -->
    <main>
        <div class="container">
            <div class="form">
                <div class="form-nav">
                    <a href="{{ path('user_index') }}">retour</a>
                </div>
                <div class="form-box">
                    <div class="form-head">
                        <h1>Changer le mot de passe</h1>
                    </div>
                    <div class="form-body">
                        {{ form_start(passwordForm) }}
                            <div class="form-group form-mb-l">
                                {{ form_label(passwordForm.oldPassword) }}
                                {{ form_widget(passwordForm.oldPassword, {'attr': {'class': 'form-element' ~ (passwordForm.oldPassword.vars.valid == false ? ' has-error')}}) }}
                                {{ form_errors(passwordForm.oldPassword) }}
                            </div>
                            <div class="form-group form-mb-l">
                                {{ form_label(passwordForm.plainPassword) }}
                                {{ form_widget(passwordForm.plainPassword, {'attr': {'class': "form-element" ~ (passwordForm.plainPassword.vars.valid == false ? ' has-error')}}) }}
                                {{ form_errors(passwordForm.plainPassword) }}
                            </div>
                            <div class="form-group form-mb-l">
                                {{ form_label(passwordForm.confirmPassword) }}
                                {{ form_widget(passwordForm.confirmPassword, {'attr': {'class': "form-element" ~ (passwordForm.confirmPassword.vars.valid == false ? ' has-error')}}) }}
                                {{ form_errors(passwordForm.confirmPassword) }}
                            </div>
                            <div class="form-action">
                                <button type="submit" class="button button-submit">Changer</button>
                            </div>
                        {{ form_end(passwordForm) }}
                    </div>
                </div>
            </div>
        </div>
    </main>

{% endblock %}
