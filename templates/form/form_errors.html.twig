{% block form_errors %}
    {% if errors|length > 0 %}
        {% if compound %}
            {# ... display the global form errors #}
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }} test</li>
                {% endfor %}
            </ul>
        {% else %}
            {# ... display the errors for a single field #}
            {% for error in errors %}
                <p class='form-error'>{{ error.message }}</p>
            {% endfor %}
        {% endif %}
    {% endif %}
{% endblock form_errors %}