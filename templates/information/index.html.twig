{% extends 'base.html.twig' %}

{% block title %}Information index{% endblock %}

{% block body %}
    <h1>Tool index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PicturePath</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tool in tool %}
            <tr>
                <td>{{ tool.id }}</td>
                <td>{{ tool.name }}</td>
                <td>
                    <a href="{{ path('information_show', {'id': tool.id}) }}">show information</a>
                    <a href="{{ path('information_edit', {'id': tool.id}) }}">edit information</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
