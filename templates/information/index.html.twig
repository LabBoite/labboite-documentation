{% extends 'base.html.twig' %}

{% block title %}Information index{% endblock %}

{% block body %}
    <h1>Tool index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom d'outils</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tool in tool %}
            <tr>
                <td>{{ tool.id }}</td>
                <td>{{ tool.name }}</td>
                <td>
                    <a href="{{ path('information_show', {'name': tool.name}) }}">show information</a>
                    <a href="{{ path('information_edit', {'name': tool.name}) }}">edit information</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
