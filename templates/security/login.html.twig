{% extends 'base.html.twig' %}

{% block body %}
    <!-- LOGIN PANEL -->
    <div class="panel-container">
        <div class="panel">
                <div class="form-box">
                    <div class="form-body">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger"><p>{{ error.messageKey|trans(error.messageData, 'security') }}</p></div>
                            {% endif %}
                            <div class="form-group form-mb-l">
                                <label for="username">Nom d'utilisateur</label>
                                <input type="text" class="form-element" name="username" id="username" value="{{ last_username }}">
                            </div>
                            <div class="form-group form-mb-l">
                                <label for="password">Mot de passe</label>
                                <input type="password" name="password" class="form-element" id="password">
                            </div>
                            <div class="form-action">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button type="submit" class="button button-submit">Se connecter</button>
                            </div>
                        </form>
                    </div>
                </div>
        </div>
    </div>

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
{% endblock %}
