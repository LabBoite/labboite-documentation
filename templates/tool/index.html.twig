{% extends 'base.html.twig' %}

{% block title %}Tool index{% endblock %}

{% block body %}
    <h1>Tool index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>PicturePath</th>
                <th>Description</th>
                <th>Type</th>
                <th>DisplayOrder</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tool in tools %}
            <tr>
                <td>{{ tool.id }}</td>
                <td>{{ tool.name }}</td>
                <td>{{ tool.picturePath }}</td>
                <td>{{ tool.description }}</td>
                <td>{{ tool.type }}</td>
                <td>{{ tool.displayOrder }}</td>
                <td>
                    <a href="{{ path('tool_edit', {'name': tool.name}) }}">edit</a>
                    <a href="{{ path('information_edit', {'name': tool.name}) }}">edit information</a>
                    <a href="{{ path('consumable_index', {'id': tool.id}) }}">see consumables</a>
                    <a href="{{ path('notice_paragraph_index', {'name': tool.name}) }}">see notice paragraph</a>
                    <a href="{{ path('question_index', {'name': tool.name}) }}">see questions</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tool_new', {'name': category.name}) }}">Create new</a>
    <a href="{{ path('category_index', {'name': category.theme.name}) }}">back to category</a>
{% endblock %}
